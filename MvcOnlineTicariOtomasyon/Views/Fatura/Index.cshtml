@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Fatura Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Fatura No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam Tutar</th>
        @*<th>Detaylar</th>*@
        <th>Güncelle</th>
        <th>Liste</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaSeriNo@x.FaturaSıraNo</td>
            <td>@x.Tarih</td>
            <td>@x.Saat</td>
            <td>@x.Toplam₺</td>
            @*<td><a href="/Fatura/FaturaDetay/@x.Faturaid" class="btn btn-success">Detaylar</a></td>*@
            <td><a href="/Fatura/FaturaGetir/@x.Faturaid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-success" data-toggle="modal" data-id="@x.Faturaid" data-target="#Modal1">Liste</a></td>
            <td><a href="/Fatura/FaturaKalemEkle" class="btn btn-dark">Kalem</a></td>
        </tr>
    }
</table>
<br />
<a href="/Fatura/FaturaEkle" class="btn btn-primary">Fatura Ekle</a>
<br />
<br />

<div class="modal fade" id="Modal1" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Fatura Kalemleri Listesi</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).on('click', '.btn-success', function () {
        var id = $(this).data('id'); 
        $.get('/Fatura/Partial1', { id: id }, function (data) {
            $('#modalBody').html(data); 
        });
    });
</script>

