@model MvcOnlineTicariOtomasyon.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "KargoEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Kargo Girişi</h2>
<br />
<form class="form-group" method="post">
    <label>Kargo Takip Kodu</label>
    <input type="text" name="TakipKodu" value="@ViewBag.takipkod" class="form-control" readonly />
    <br />
    <label>Personel</label>
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    <label>Alıcı</label>
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    <input type="date" name="Tarih" class="form-control" />
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kargo Ekle</button>
</form>